   pages = {121759},
   pmid = {35460849},
   publisher = {Elsevier},
   title = {The fingerprints of nifedipine/isonicotinamide cocrystal polymorph studied by terahertz time-domain spectroscopy},
   volume = {620},
   year = {2022},
}
